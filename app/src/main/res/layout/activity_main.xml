<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="main"
            type="com.example.githubsearch.presentation.activity.MainActivity" />

        <variable
            name="mainVm"
            type="com.example.githubsearch.presentation.viewmodel.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.activity.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/main_toolbar_imageSize"
                    android:layout_height="@dimen/main_toolbar_imageSize"
                    android:src="@drawable/ic_github" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/main_toolbar_titleMarginStart"
                    android:text="@string/main_toolbar_title"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_list"
                android:layout_width="@dimen/main_toolbar_imageSize"
                android:layout_height="@dimen/main_toolbar_imageSize"
                android:layout_gravity="right"
                android:onClick="@{main::onClick}"
                android:padding="12dp"
                android:src="@drawable/list" />

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/et_searchId"
            etAction="@{mainVm::getUserId}"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="@dimen/main_editText_margin"
            android:layout_marginTop="@dimen/main_editText_margin"
            android:layout_marginEnd="@dimen/main_editText_margin"
            android:background="@drawable/round_edit"
            android:hint="@string/main_editText_hint"
            android:imeOptions="actionDone"
            android:paddingStart="@dimen/main_editText_padding"
            android:paddingEnd="@dimen/main_editText_padding"
            android:singleLine="true"
            android:text="@={mainVm.searchId}"
            android:textSize="@dimen/main_editText_size" />

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/main_swipeLayout_marginStartEnd"
                    android:layout_marginEnd="@dimen/main_swipeLayout_marginStartEnd"
                    android:visibility="@{mainVm.isEmpty ? View.GONE : View.VISIBLE}">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/main_recyclerview_marginTop"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                <LinearLayout
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:visibility="@{mainVm.isEmpty ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_empty_imageSize"
                            android:layout_height="@dimen/main_empty_imageSize"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_empty_github" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_empty_textMarginTop"
                            android:gravity="center"
                            android:text="@string/main_empty_text"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favorite_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:visibility="@{mainVm.isEmptyBookMark ? View.GONE : View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <LinearLayout
                    android:id="@+id/emptyBookMarkView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:visibility="@{mainVm.isEmptyBookMark ? View.VISIBLE : View.GONE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_empty_imageSize"
                            android:layout_height="@dimen/main_empty_imageSize"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_empty" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/main_empty_textMarginTop"
                            android:gravity="center"
                            android:text="@string/main_bookMark_text"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </androidx.drawerlayout.widget.DrawerLayout>

    </LinearLayout>
</layout>