<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.githubsearch.model.User"/>
        <import type="kotlin.Unit"/>

        <variable
            name="user"
            type="com.example.githubsearch.model.User" />

        <variable
            name="onClick"
            type="kotlin.jvm.functions.Function1&lt;User, Unit>"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="@dimen/main_item_marginTop"
        android:onClick="@{() -> onClick.invoke(user)}"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/main_item_imageSize"
            android:layout_height="@dimen/main_item_imageSize"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/main_item_imageMarginStart"
            bind_userImage="@{user.avatarUrl}"
            android:src="@drawable/ic_github" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/main_item_textViewMarginStart"
            android:text="@{user.login}"
            android:textSize="@dimen/main_item_textViewSize"
            tools:text="userId" />

    </LinearLayout>
</layout>